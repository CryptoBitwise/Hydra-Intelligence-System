{
    "name": "HYDRA_Master_Orchestration",
    "nodes": [
        {
            "id": "trigger",
            "type": "n8n-nodes-base.scheduleTrigger",
            "parameters": {
                "rule": {
                    "interval": [
                        {
                            "minutes": 5
                        }
                    ]
                }
            },
            "position": [
                250,
                300
            ]
        },
        {
            "id": "bright_data_collector",
            "type": "@brightdata/collector",
            "parameters": {
                "operation": "collect",
                "collectors": [
                    {
                        "id": "competitor_prices",
                        "type": "e_commerce",
                        "targets": "{{$json.competitors}}"
                    },
                    {
                        "id": "job_postings",
                        "type": "jobs",
                        "sites": [
                            "linkedin",
                            "indeed",
                            "glassdoor"
                        ]
                    },
                    {
                        "id": "social_mentions",
                        "type": "social",
                        "platforms": [
                            "twitter",
                            "reddit",
                            "hackernews"
                        ]
                    }
                ]
            },
            "position": [
                450,
                300
            ]
        },
        {
            "id": "hydra_brain",
            "type": "n8n-nodes-base.httpRequest",
            "parameters": {
                "method": "POST",
                "url": "http://localhost:8000/api/process",
                "body": "={{$json}}"
            },
            "position": [
                650,
                300
            ]
        },
        {
            "id": "alert_critical",
            "type": "n8n-nodes-base.if",
            "parameters": {
                "conditions": {
                    "string": [
                        {
                            "value1": "={{$json.threatLevel}}",
                            "value2": "critical"
                        }
                    ]
                }
            },
            "position": [
                850,
                200
            ]
        },
        {
            "id": "send_alert",
            "type": "n8n-nodes-base.slack",
            "parameters": {
                "channel": "#competitive-intel",
                "text": "ðŸš¨ CRITICAL THREAT: {{$json.discovery}}",
                "attachments": [
                    {
                        "color": "danger",
                        "fields": [
                            {
                                "title": "Competitor",
                                "value": "{{$json.competitor}}"
                            },
                            {
                                "title": "Action Required",
                                "value": "{{$json.recommendedAction}}"
                            }
                        ]
                    }
                ]
            },
            "position": [
                1050,
                200
            ]
        }
    ],
    "connections": {
        "trigger": {
            "main": [
                [
                    "bright_data_collector"
                ]
            ]
        },
        "bright_data_collector": {
            "main": [
                [
                    "hydra_brain"
                ]
            ]
        },
        "hydra_brain": {
            "main": [
                [
                    "alert_critical"
                ]
            ]
        },
        "alert_critical": {
            "main": [
                [
                    "send_alert"
                ],
                []
            ]
        }
    }
}