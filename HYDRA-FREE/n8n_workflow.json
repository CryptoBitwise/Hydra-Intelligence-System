{
  "name": "HYDRA Intelligence Workflow",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 6
            }
          ]
        }
      },
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [250, 300]
    },
    {
      "parameters": {
        "url": "https://hydra-free.onrender.com/api/collect",
        "method": "POST",
        "body": {
          "competitors": ["competitor1.com", "competitor2.com"]
        }
      },
      "name": "Trigger HYDRA Collection",
      "type": "n8n-nodes-base.httpRequest",
      "position": [450, 300]
    },
    {
      "parameters": {
        "dataCollectorId": "{{$json.brightDataCollector}}",
        "webhook": "https://hydra-free.onrender.com/api/webhook"
      },
      "name": "Bright Data Scraper",
      "type": "n8n-nodes-base.brightData",
      "position": [650, 300]
    }
  ],
  "connections": {
    "Schedule Trigger": {
      "main": [["Trigger HYDRA Collection"]]
    },
    "Trigger HYDRA Collection": {
      "main": [["Bright Data Scraper"]]
    }
  }
}
