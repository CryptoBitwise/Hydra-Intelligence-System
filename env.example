# HYDRA Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://hydra:hydra@localhost:5432/hydra_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# WebSocket Configuration
WS_HOST=0.0.0.0
WS_PORT=8001

# Bright Data Configuration (for web scraping)
BRIGHT_DATA_USERNAME=your_bright_data_username
BRIGHT_DATA_PASSWORD=your_bright_data_password
BRIGHT_DATA_HOST=brd.superproxy.io
BRIGHT_DATA_PORT=22225

# Ollama Configuration (for AI analysis)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ChromaDB Configuration (for vector storage)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Head-specific configurations
PRICE_WATCH_ENABLED=True
PRICE_WATCH_INTERVAL=300
PRICE_WATCH_TARGETS=amazon,netflix,spotify

JOB_SPY_ENABLED=True
JOB_SPY_INTERVAL=600
JOB_SPY_COMPANIES=google,microsoft,apple

TECH_RADAR_ENABLED=True
TECH_RADAR_INTERVAL=1800
TECH_RADAR_KEYWORDS=ai,blockchain,cloud

SOCIAL_PULSE_ENABLED=True
SOCIAL_PULSE_INTERVAL=900
SOCIAL_PULSE_PLATFORMS=twitter,linkedin,reddit

PATENT_HAWK_ENABLED=True
PATENT_HAWK_INTERVAL=3600
PATENT_HAWK_OFFICES=uspto,epo,jpo

AD_TRACKER_ENABLED=True
AD_TRACKER_INTERVAL=1200
AD_TRACKER_NETWORKS=google,facebook,amazon

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
ALERT_EMAIL=alerts@yourcompany.com

# GPU Configuration (for 4090 analysis)
GPU_ENABLED=False
GPU_DEVICE=cuda:0
